<h1>Lists#show</h1>
<p>Find me in app/views/lists/show.html.erb</p>
<% if @list.bookmarks.any? %>
<% @list.bookmarks.each do |bookmark| %>
<li><%= bookmark.comment %></li>
<li><%= link_to 'x',  bookmark_path(bookmark), data: { turbo_method: :delete, turbo_confirm: 'Delete bookmark?' } %></li>

<% end %>
<% else %>
<p>no bookmarks</p>
<% end %>
<p><%= link_to 'Add bookmark', new_list_bookmark_path(@list) %></p>
